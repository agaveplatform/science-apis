{
  "name": "fork",
  "version": "1.0.0",
  "helpURI": "http://support.agaveplatform.org",
  "label": "Remote command execution script",
  "defaultNodeCount": 1,
  "defaultRequestedTime": "00:10:00",
  "shortDescription": "Simple app for running a user-defined command on a remote system",
  "longDescription": "Simple app for running a user-defined command on a remote system. No sanitization is done on the command choice.",
  "executionSystem": "execute.example.com",
  "executionType": "CLI",
  "parallelism": "SERIAL",
  "deploymentPath": "testuser/agave/apps/fork-1.0.0",
  "deploymentSystem": "storage.example.com",
  "templatePath": "wrapper.sh",
  "testPath": "test/test.sh",
  "checkpointable": false,
  "tags": [
    "demo",
    "debug"
  ],
  "modules": [
    "python3"
  ],
  "inputs": [
    {
      "details": {
        "description": "Select an input file",
        "label": "Target File",
        "visible": true
      },
      "id": "inputfile",
      "semantics": {
        "fileTypes": [
          "TEXT-0"
        ],
        "minCardinality": 0,
        "ontology": [
          "0"
        ]
      },
      "value": {
        "default": null,
        "required": false,
        "validator": "",
        "visible": true
      }
    }
  ],
  "parameters": [
    {
      "id": "command",
      "details": {
        "label": "Command to run",
        "description": "This is the actual command you want to run. ex. df -h -d 1",
        "argument": null,
        "showArgument": false
      },
      "value": {
        "default": "whoami && date && hostname",
        "type": "string",
        "required": true,
        "visible": true
      },
      "semantics": {
        "ontology": []
      }
    }
  ],
  "outputs": [
    {
      "details": {
        "description": "Marker file",
        "label": "Marker file",
        "visible": true
      },
      "id": "inputfile",
      "semantics": {
        "fileTypes": [
          "TEXT-0"
        ],
        "minCardinality": 0,
        "maxCardinality": 1,
        "ontology": [
          "marker"
        ]
      },
      "value": {
        "default": null,
        "required": false,
        "validator": "\\.marker$",
        "visible": true,
        "order": 0
      }
    }
  ]
}
